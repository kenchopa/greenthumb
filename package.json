{
  "name": "greenthumb",
  "version": "1.0.0",
  "description": "The monorepo for storing all related apps about project greenthumb",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "portal": "pnpm --filter @greenthumb/portal",
    "user": "pnpm --filter @greenthumb/user",
    "telemetry": "pnpm --filter @greenthumb/telemetry",
    "dev": "pnpm --recursive --parallel --stream run dev",
    "build": "pnpm --recursive --parallel --stream run build"
  },
  "keywords": [],
  "author": "Kengy Van Hijfte",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@greenthumb/auth": "workspace:^",
    "@greenthumb/context": "workspace:^",
    "@greenthumb/koa": "workspace:^",
    "uuid": "^9.0.0"
  }
}
